<%= render :layout => 'layouts/base' do %>
  <div class="page-header">
    <h2>
      <%= link_to [ @app, @profile ] do %>
        <% if @profile.description %>
          <strong><%= @profile.description %></strong>
        <% else %>
          <em>Unknown profile</em>
        <% end %>
      <% end %>
    </h2>

    <div class="row">
      <div class="span2">
        <strong>Wall:</strong>
        <%= profile_time_default(@profile.total_time) %>
      </div>
      <div class="span2">
        <strong>CPU:</strong>
        <%= profile_time_default(@profile.cpu_time) %>
      </div>
      <div class="span2">
        <strong>Idle:</strong>
        <%= profile_time_default(@profile.idle_time) %>
      </div>
      <div class="span6">
        <strong>Host:</strong>
        <%= @profile.hostname %>:<%= @profile.pid %>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <strong>When:</strong>
        <%= was_profiled_at(@profile) %> ago
      </div>
    </div>
  </div>

  <%= yield %>
<% end %>
